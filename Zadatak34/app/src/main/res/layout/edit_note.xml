<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/editNoteTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/editNoteTitleTextViewPadding"
        android:text="@string/editNoteTitleTextView"
        android:textSize="@dimen/editNoteTitleTextViewFontSize" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editNoteTitleTextView"
        android:layout_marginLeft="@dimen/editNoteNameMarginLeft"
        android:id="@+id/fileTitle"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top"
        android:layout_below="@+id/fileTitle"
        android:layout_marginLeft="@dimen/editNoteNameMarginLeft"
        android:id="@+id/fileContent"/>

</RelativeLayout>