<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/myActionBar</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="android:textColorHint">#ffffff</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/myActionBar</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:actionBarStyle">@style/myActionBar</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="android:textColorHint">#ffffff</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/myActionBar</item>
    </style>

    <style name="myActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/blue</item>
        <!-- Support library compatibility -->
        <item name="background">@color/blue</item>
        <item name="colorAccent">@android:color/white</item>
    </style>

    <style name="LoginInput">
        <item name="android:textSize">@dimen/text_size_standard</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:singleLine">true</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Button">
        <item name="android:padding">@dimen/small_spacing</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_standard</item>
    </style>

    <style name="Button.Login">
        <item name="android:background">@drawable/login_button</item>
    </style>

    <style name="ListItem" />

    <style name="ListItem.Title">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/text_size_standard_large</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
